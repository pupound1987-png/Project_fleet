rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FleetLink Company Vehicle Booking System - Security Rules
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    match /users/{userId} {
      // Allow users to see their own profile or admins to see any
      allow get: if isOwner(userId) || isAdmin();
      // Only admins can list users
      allow list: if isAdmin();
      // Allow creation during registration
      allow create: if isOwner(userId);
      // Allow users to update their own profile or admins
      allow update: if isOwner(userId) || isAdmin();
      // Only admins can delete
      allow delete: if isAdmin();
    }

    match /roles_admin/{adminId} {
      // Allow any signed in user to check if someone is an admin (used by exists() checks)
      allow read: if isSignedIn();
      // Only existing admins can manage other admin roles
      allow write: if isAdmin();
    }

    match /vehicles/{vehicleId} {
      // All authenticated users can see the vehicle fleet
      allow read: if isSignedIn();
      // Only admins can add, update or remove vehicles
      allow write: if isAdmin();
    }

    match /bookings/{bookingId} {
      // All authenticated users can see bookings (required for the calendar and availability)
      allow read: if isSignedIn();

      // Only allow creation if the employeeId matches the authenticated user
      allow create: if isSignedIn() 
                    && request.resource.data.employeeId == request.auth.uid;
      
      // Allow update for owners (if pending/approved) or admins
      allow update: if isAdmin() || (isSignedIn() && resource.data.employeeId == request.auth.uid);
      
      // Only admins can delete bookings
      allow delete: if isAdmin();
    }
  }
}